{
  "name": "jonykru.com",
  "version": "2.18.0",
  "private": true,
  "scripts": {
    "predev": "tsx scripts/generate-version.ts",
    "dev": "next dev",
    "prebuild": "tsx scripts/generate-version.ts",
    "build": "NODE_ENV=production next build",
    "build-analyze": "ANALYZE=true NODE_ENV=development next build",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version",
    "start": "npx serve out",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky",
    "update-credly": "tsx scripts/update-credly.ts",
    "update-medium": "tsx scripts/update-medium.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@formspree/react": "^2.5.5",
    "@headlessui/react": "^2.2.9",
    "@mantine/hooks": "^7.17.8",
    "autoprefixer": "^10.4.22",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.483.0",
    "next": "15.2.4",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-intersection-observer": "^9.16.0",
    "react-type-animation": "^3.2.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "sharp": "^0.33.5",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^15.5.9",
    "@next/eslint-plugin-next": "^15.5.9",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.19.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.2.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "tsc-files": "^1.1.4",
    "tsx": "^4.21.0",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.config).{ts,tsx}": [
      "tsc-files --skipLibCheck --noEmit --project tsconfig.json"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    }
  },
  "engines": {
    "node": "24.x"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "volta": {
    "node": "24.5.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ]
}
